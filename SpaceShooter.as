package {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.KeyboardEvent;		public class SpaceShooter extends MovieClip {				var steerLeft:Boolean;		var steerRight:Boolean;		var isFiring:Boolean;		var speed:Number;		var acceleration:Number;		var mc_ship:Ship;		public function SpaceShooter() {						steerLeft = false;			steerRight = false;			isFiring = false;			speed = 0.25;			acceleration = 0;						mc_ship = new Ship();			stage.addChild(mc_ship);			mc_ship.x = 333;			mc_ship.y = 553;						stage.addEventListener(KeyboardEvent.KEY_DOWN, keyPressed);			stage.addEventListener(KeyboardEvent.KEY_UP, keyReleased);			stage.addEventListener(Event.ENTER_FRAME, update);				}								function keyPressed(evt:KeyboardEvent) {						if (evt.keyCode == 65) { //A				steerLeft = true;				steerRight = false;						}						if (evt.keyCode == 68) { //D				steerLeft = false;				steerRight = true;							}						if (evt.keyCode == 32) { // Space				isFiring = true;			}				}				function keyReleased(evt:KeyboardEvent) {						if (evt.keyCode == 65) {				steerLeft = false;			}						if (evt.keyCode == 68) {				steerRight = false;			}						if (evt.keyCode == 32) {							}				}						function update(evt:Event):void {						mc_ship.x += acceleration;						// BACKGROUND MOVEMENT			mc_background.y++;			if (mc_background.y == 0) {				mc_background.y = -600,05;			}									// SHIP MOVEMENT						if ( steerLeft ) {										acceleration -=speed;											}						if ( steerRight ) {									acceleration +=speed;									}						if(isFiring){// if isFiring true create new Bullet and set isFiring false				var bullet:Bullet = new Bullet(mc_ship);				addChild(bullet);				isFiring = false;			}						if (bullet.y < -1) {								bullet.removeChild(this);							}															trace(acceleration);		}			}}