package  {		import flash.display.MovieClip;	import flash.events.Event;		public class Bullet extends MovieClip {				var ySpeed:int; //y Speed of Bullet						public function Bullet(mc_ship:Ship) {			this.addEventListener(Event.ENTER_FRAME, update);			ySpeed = 8;			this.y = mc_ship.y; //y coord Bullet = y coord Ship			this.x = mc_ship.x; //x coord Bullet = x coord Ship		}				public function update(evt:Event){  			this.y -= ySpeed; //move bullet up						if (this.y < -1) {								this.removeChild(this);							}								}			}	}